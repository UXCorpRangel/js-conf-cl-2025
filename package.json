{
  "name": "js-conf-cl-2025",
  "version": "1.0.0",
  "private": true,
  "description": "Web oficial de la JSConf Chile 2025",
  "bugs": {
    "url": "https://github.com/UXCorpRangel/js-conf-cl-2025/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/UXCorpRangel/js-conf-cl-2025.git"
  },
  "license": "MIT",
  "author": {
    "name": "UXCorpRangel",
    "url": "https://github.com/UXCorpRangel/"
  },
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "astro check && astro build",
    "dev": "astro dev",
    "lint:fix": "eslint --cache --fix ./",
    "prepare": "simple-git-hooks",
    "preview": "astro preview",
    "start": "astro dev"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm ls-lint",
    "commit-msg": "pnpm commitlint -c -e ${1}"
  },
  "lint-staged": {
    "./**/*.{js,mjs,cjs}": [
      "pnpm lint:fix"
    ],
    "./**/*.ts": [
      "pnpm lint:fix"
    ],
    "./src/**/*.astro": [
      "pnpm lint:fix"
    ],
    "./src/**/*.{jsx,tsx}": [
      "pnpm lint:fix"
    ]
  },
  "dependencies": {
    "@astrojs/check": "0.9.4",
    "@fontsource-variable/inconsolata": "5.1.1",
    "@fontsource-variable/onest": "5.1.1",
    "@playform/compress": "0.1.7",
    "@playform/inline": "0.1.1",
    "astro": "5.1.5",
    "astro-compressor": "1.0.0",
    "astro-icon": "1.1.5",
    "astro-seo-schema": "5.0.0",
    "astro-sitemap": "1.0.0",
    "class-variance-authority": "0.7.1",
    "embla-carousel": "8.5.2",
    "embla-carousel-autoplay": "8.5.2",
    "lightningcss": "1.29.1",
    "sanitize.css": "13.0.0",
    "schema-dts": "1.1.2",
    "sharp": "0.33.5",
    "typescript": "5.7.3"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@eslint/js": "9.18.0",
    "@ls-lint/ls-lint": "2.2.3",
    "astro-eslint-parser": "1.1.0",
    "eslint": "9.18.0",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-jsonc": "2.18.2",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-package-json": "0.19.0",
    "eslint-plugin-perfectionist": "4.6.0",
    "eslint-plugin-yml": "1.16.0",
    "globals": "15.14.0",
    "jsonc-eslint-parser": "2.4.0",
    "lint-staged": "15.3.0",
    "neostandard": "0.12.0",
    "simple-git-hooks": "2.11.1",
    "typescript-eslint": "8.22.0",
    "yaml-eslint-parser": "1.2.3"
  },
  "engines": {
    "node": ">=18.20.0",
    "pnpm": ">=9.12.0"
  }
}
